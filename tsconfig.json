{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@website/*": ["./src/app/(website)/*"],
      "@dashboard/*": ["./src/app/(dashboard)/*"],
      "@public/*": ["./public/*"],
      "@core/*": ["./src/@core/*"],
      "@web-components/*": ["./src/app/(website)/components/*"],
      "@core-types/*": ["./src/@core/types/*"],
      "@app-types/*": ["./src/app/types/*"],
      "@global-types/*": ["./src/types/*"],
      "@shared/*": ["./src/app/shared/*"],
      "@root/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
